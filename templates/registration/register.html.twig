{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block stylesheets %}
<script async defer src="https://apis.google.com/js/platform.js"></script>
<meta content="138347717320-g874gff36iqccil3k6v35i0mae93ts05.apps.googleusercontent.com" name="google-signin-client_id">
{% endblock %}
{% block body %}
<div class="g-signin2" data-onsuccess="onSignIn"></div>


    <h1>Become a debater</h1>

    {{ form_start(registrationForm) }}
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="staticEmail">Email</label>
        <div class="col-sm-10">
            {{ form_row(registrationForm.email) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="staticEmail">Pseudo</label>
        <div class="col-sm-10">
            {{ form_row(registrationForm.pseudo) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="staticEmail">Password</label>
        <div class="col-sm-10">
            {{ form_row(registrationForm.plainPassword) }}
        </div>

    </div>

    <button class="btn btn-lg btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
