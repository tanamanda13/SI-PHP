{% extends 'base.html.twig'%}

{% block title %} Test Debates{% endblock %}

{% block body %}
{% if debates %}
<div class="btn-group" role="group" aria-label="Basic example">
  <a href="/created"><button type="button" class="btn btn-secondary">New</button></a>
  <a href="/total_votes"><button type="button" class="btn btn-secondary">Popular</button></a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Debate title</th>
      <th>Side 1</th>
      <th>Votes</th>
      <th>Side 2</th>
      <th>Votes</th>
      <th>Category</th>
      <th>Author</th>
      <th>Created</th>
      <th>Total votes</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for debate in debates %}
  <tr>
    <td>{{debate.title}}</td>
    <td>{{debate.side1}}</td>
    <td>{{debate.side1_votes}}</td>
    <td>{{debate.side2}}</td>
    <td>{{debate.side2_votes}}</td>
    <td>{{debate.category}}</td>
    <td>{{debate.author}}</td>
    <td>{{debate.created}}</td>
    <td>{{debate.total_votes}}</td>
    <td>
      <a href="/debate/{{debate.id}}" class="btn btn-dark">Show</a>
    </td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% else %}
<p>No debates</p>
{% endif %}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}